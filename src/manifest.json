{
    "manifest_version": 3,
    "name": "ConTime Site Blocker",
    "description": "Block any site in your browser as a student, worker or a developer in other to increase productivity.",
    "version" : "1.0.0",
    "icons" : {"128": "./assets/images/icon.png"},
    "action": {
        "default_icon": "./assets/images/icon.png",
        "default_popup": "./popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["popup.js"]
        }
      ],
    "permissions": ["activeTab"]
}


